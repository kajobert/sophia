#!/bin/bash
echo "üõë Zastavuji SOPHII..."
if pgrep -f "python.*run.py" > /dev/null; then
    pkill -f "python.*run.py"
    sleep 2
    if ! pgrep -f "python.*run.py" > /dev/null; then
        echo "‚úÖ SOPHIA zastavena"
    else
        pkill -9 -f "python.*run.py"
        echo "‚úÖ SOPHIA zastavena (SIGKILL)"
    fi
else
    echo "‚ÑπÔ∏è  SOPHIA nebƒõ≈æ√≠"
fi
